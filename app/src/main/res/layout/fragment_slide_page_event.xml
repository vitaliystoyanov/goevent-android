<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slide_page_events_cardview"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/slide_page_image"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/slide_page_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/slide_page_image"
            android:layout_toRightOf="@+id/slide_page_image"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/slide_page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/slide_page_date"
            android:layout_toEndOf="@+id/slide_page_image"
            android:layout_toRightOf="@+id/slide_page_image"
            android:gravity="center"
            android:maxLength="90"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="normal|bold" />

        <ProgressBar
            android:id="@+id/slide_page_progressbar"
            style="@android:style/Widget.Material.Light.ProgressBar.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/slide_page_image"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/slide_page_image"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
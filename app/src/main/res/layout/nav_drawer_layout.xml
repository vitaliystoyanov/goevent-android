<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_nav_drawer">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/drawer_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawer_header_login"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Sign up or Log in"
        android:textColor="@android:color/white"
        android:textSize="@dimen/drawer_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drawer_header_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drawer_header_username"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/drawer_header_username"
        android:layout_marginBottom="9dp"
        android:gravity="left"
        android:text="Find the best nearby events"
        android:textColor="@android:color/white"
        android:textSize="@dimen/drawer_text_size" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_of_events_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/list_events_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminate="true"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/list_events_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        app:fabSize="normal"
        app:layout_behavior="com.stoyanov.developer.goevent.ui.common.FABHideOnScroll"
        app:srcCompat="@drawable/ic_google_maps" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/list_events_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/list_events_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Date: Tomorrow"
                android:textColor="@color/colorWhiteText"
                android:textSize="16sp" />
        </RelativeLayout>

        <au.com.dardle.widget.BadgeLayout
            android:id="@+id/list_events_badge_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            app:badgeBackground="@drawable/background_app_badge"
            app:badgeTextColor="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:spacing="8dp">

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONCERT" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOVIE" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EARLY ACCESS" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAMILY" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDITORS' CHOICE" />

        </au.com.dardle.widget.BadgeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/list_events_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_events_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="@string/event_map_routes_routes"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/list_events_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabs_height"
            android:layout_gravity="bottom">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_directions_walk_24px" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_directions_car_24px" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_directions_transit_24px" />

        </android.support.design.widget.TabLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/detail_event_routes_map"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/event_map_routes_button_open_map"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/event_map_routes_open_map" />

    </LinearLayout>
</android.support.v7.widget.CardView>